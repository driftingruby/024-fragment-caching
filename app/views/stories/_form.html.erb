<%= simple_form_for(@story) do |f| %>
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Editing Story</h3>
		</div>
		<div class="panel-body">
	    <%= f.input :name %>
      <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :tag_list, class: "control-label col-xs-3" %>
        <div class="col-xs-9">
          <%= f.input_field :tag_list, as: :string, class: "form-control input-sm", value: @story.tag_list %>
        </div>
      <% end %>
	    <%= f.input :content %>
		</div>
		<div class='panel-footer'>
	    <%= f.button :submit %>
	   </div>
	</div>
<% end %>
